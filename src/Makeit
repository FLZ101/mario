.PHONY: all

all: boot/boot.bin kernel/kernel.exe

include $(DEPS)

%.bin: %.asm
	@$(NASM) -f bin -l $*.lst -o $@ $<
	@echo $@

kernel/kernel.exe: $(OBJS)
	$(LD) $(LDFLAGS) -o $@ $^
	cp $@ kernel/kernel.dbg
	$(OBJDUMP) -d -S -M i386 $@ > kernel/kernel.dbg.txt
	$(NM) -g -n $@ > kernel/kernel.nm
	$(STRIP) -s -R .eh_frame $@

%.o: %.S
	@$(CC) $(CFLAGS) -D__ASSEMBLY__ -o $@ $<
	@echo $@

%.o: %.c
	@$(CC) $(CFLAGS) -o $@ $<
	@echo $@
